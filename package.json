    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
